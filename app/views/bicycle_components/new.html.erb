<div class="container d-flex justify-content-center">
  <div class="jumbotron" style="width:900px; padding: 20px;">
    <h1 class="text-center">New Bicycle Component</h1>
    <hr class="my-4">
    <div class="d-flex flex-column align-items-center">
    <%= form_with model: @bicycle_component, local: true do |form| %>
      <div>
        <%= form.label :bicycle_id %>
        <%= form.number_field :bicycle_id %>
      </div>
      <div>
        <%= form.label :component_id %>
        <%= form.number_field :component_id %>
      </div>
      <div>
        <%= form.submit %>
      </div>
    <% end %>
    <%= link_to 'Back', bicycle_components_path %>
    </div>
  </div>
</div>
