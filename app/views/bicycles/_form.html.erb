
      <%= simple_form_for @bicycle do |f| %>
        <%=  f.input :name, as: :string %>
        <%=  f.input :category, as: :string %>
        <%=  f.input :serial_number, as: :string %>
        <%=  f.input :description, as: :text  %>
        <%=  f.input :make, as: :text  %>
        <%=  f.input :photo, as: :file  %>
        <%= f.input :favourite, as: :select, collection: [['Yes',true], ['No',false]] %>
        <%=  f.submit "Finalize", class: "btn btn-primary", style:"background-color:#899687; border:none; color:black" %>
      <% end %>
