<%= simple_form_for @users_ride do |f| %>

  <%=  f.input :bicycle, collection: @bikes  %>
  <div class ="d-none">
  <%= f.input :user, collection: [@user], selected: @user %>
  <%=  f.input :ride, collection: [@ride], selected: @ride %>
  </div>
  <%=  f.submit "Add me to Ride", class:"rounded", style:"background-color:#899687; border:none; padding:10px"  %>
<% end %>


