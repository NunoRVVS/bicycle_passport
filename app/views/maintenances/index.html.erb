
<div class="container my-3">
  <div class="row justify-content-center">
    <h3>List of maintenances</h3>
  </div>
  <div class="maintenances">
    <% @maintenances.each do |maintenance| %>
      <div class="my-3">
        <p><%= maintenance.shop %></p>
        <p><%= maintenance.date %></p>
        <p><%= maintenance.description %></p>
        <%= link_to "Delete", maintenance_path(maintenance),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>


      <hr>
      </div>
    <% end %>
  </div>
<%= link_to "Add a maintenance", new_bicycle_maintenance_path %>


</div>
