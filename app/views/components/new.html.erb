<div class="container d-flex justify-content-center">
  <div class="jumbotron" style="width:900px; padding: 20px;">
    <h1 class="display-5 d-flex justify-content-center">New Component</h1>
    <hr class="my-4">
    <div class="d-flex flex-column align-items-center">
    <%= form_with model: @component, local: true do |form| %>
      <div>
        <%= form.label :make %>
        <%= form.text_field :make %>
      </div>
      <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>
      <div>
        <%= form.label :serial_number %>
        <%= form.text_field :serial_number %>
      </div>
      <div>
        <%= form.label :description %>
        <%= form.text_area :description %>
      </div>
      <div>
        <%= form.submit %>
      </div>
    <% end %>
    <%= link_to 'Back', component_path(@component) %>
    </div>
  </div>
</div>
