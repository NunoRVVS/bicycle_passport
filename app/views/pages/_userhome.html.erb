      <%= cl_image_tag @bicycle.photo.key, alt: "Bike image", class: "rounded", height:850, crop: :fill %>
    <% else %>
      <%= image_tag "Giant.jpg", alt: "Bike image", class: "rounded", height:850, crop: :fill %>
    <% end %>
    </div>


