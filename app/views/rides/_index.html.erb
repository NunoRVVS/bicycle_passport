<div class="container grid card-container bg-white" id="card-container">
<div class="row">

<% if !@rides.nil? && @rides.count > 0 %>
  <% @rides.each do |ride| %>
    <div class="card col-sm-4 bike-card p-0">
    <div class="m-3 card-holder">
      <%# <img src="..." class="card-img-top" alt="Your bike here"> %>
      <% if ride.photo.present? %>
      <div class="m-3 d-flex align-content-center justify-content-center">
      <%= cl_image_tag bicycle.photo.key, height: 250, width: 350, crop: :fill %>
      </div>
      <% end %>
      <div class="card-body">
        <h5 class="card-title"> <%= link_to ride.name, user_ride_path(@user,ride), class:'stretched-link' %></h5>
        <% results_start = Geocoder.search([ ride.start_lat, ride.start_long]) %>
        <% results_end = Geocoder.search([ ride.end_lat, ride.end_long]) %>
        <p class="card-text"><%= results_start.first.city %> to <%= results_end.first.city %> </p>

        <p class="card-text"> <%= ride.distance %> <p>
      </div>
    </div>
    </div>
  <% end %>
  <% end %>
  <div class="card col-sm-4 bike-card p-0">
      <div class="m-3 card-holder">
        <%# <img src="..." class="card-img-top" alt="Your bike here"> %>

        <div class="m-3 d-flex align-content-center justify-content-center">
        <%=image_tag "bike-outline", height: 250, width: 350, crop: :fill %>
        </div>

        <div class="card-body">
          <h5 class="card-title"> <%= link_to "Add a new ride", new_user_ride_path(@user) , class:'stretched-link' %></h5>
          <%# <p class="card-text"><%= bicycle.make <%= bicycle.category </p> %>
        </div>
      </div>
    </div>
  </div>
</div>
